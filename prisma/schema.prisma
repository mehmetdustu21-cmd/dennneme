// Session tablosu (Shopify için gerekli)
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// Kombin (Outfit) tablosu
model Outfit {
  id            String          @id @default(cuid())
  shop          String
  name          String
  description   String?
  mainProductId String
  active        Boolean         @default(true)
  products      OutfitProduct[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  @@index([shop])
}

// Kombindeki ürünler
model OutfitProduct {
  id           String   @id @default(cuid())
  outfitId     String
  productId    String
  productTitle String
  productImage String
  productPrice String
  category     String
  outfit       Outfit   @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  
  @@index([outfitId])
}